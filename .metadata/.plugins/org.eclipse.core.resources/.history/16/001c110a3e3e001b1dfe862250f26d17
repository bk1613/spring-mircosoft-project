package com.synex.controller;

import java.util.HashMap;
import java.util.List;

public class Cashier {
	
	int n;
	
	int discount;
	
	HashMap<Integer, Integer> map;

	public Cashier(int n, int discount, List<Integer> l1, List<Integer> l2) {
		
		for(int i=0; i< l2.size();i++) {
			map.put(l1.get(i), l2.get(i));
		}
		this.n = n;
		this.discount = discount;
	}

	public double getBill(List<Integer> l1, List<Integer> l2) {
		int curr = 0;
		curr++;
		boolean flag = curr == n;
		if(curr == n) {
			curr = 0;
		}
		double rst = 0;
		for(int i = 0; i < l1.size(); i++) {
			double x = l1.get(i);
			double cost = map.get(x);
			double y = l2.get(i);
			rst += (cost * y);
		}
		
		if(flag) {
			rst = rst - (rst*discount)/100;
		}
		return rst;
		

	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Cashier casier = new Cashier(3, 50, List.of(1,2,3,4,5,6,7), List.of(100,200,300,400,300,200,100));
		
	}

}
